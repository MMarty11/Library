<Window x:Class="MyLMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyLMS"
        xmlns:views="clr-namespace:MyLMS.Views"
        mc:Ignorable="d"
        Title="Gestione Biblioteca" Height="450" Width="800">

    <Grid>
        <!-- Menu principale -->
        <Grid x:Name="MainMenuPanel">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="300">
                <TextBlock Text="Gestione Biblioteca"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <Button Content="Gestione libri"
                        Margin="0,0,0,10"
                        Padding="10"
                        Click="SearchBookButton_Click"/>

                <Button Content="Gestione utenti"
                    Margin="0,0,0,10"
                    Padding="10"
                    Click="UsersButton_Click"/>

                <Button Content="Prestiti"
                        Margin="0,0,0,10"
                        Padding="10"
                        Click="LoansButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Area dove carico le altre view -->
        <ContentControl x:Name="ContentArea"
                        Visibility="Collapsed"/>
    </Grid>
</Window>