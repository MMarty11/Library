<Window x:Class="MyLMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyLMS"
        xmlns:views="clr-namespace:MyLMS.MVVM.Views"
        xmlns:viewModel="clr-namespace:MyLMS.MVVM.ViewModels"
        mc:Ignorable="d"
        Height="600" Width="920"
        Background="Transparent"
        >
        <!--AllowsTransparency="True"
    WindowStyle="None"
        ResizeMode="NoResize"-->

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border Background="#272537"
            CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Library"
                FontFamily="Fonts/#Sunlight Dreams"
                FontSize="34"
                FontWeight="Bold"
                Foreground="White"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="20,0,0,0"/>

            <StackPanel Grid.Row="1">
                <RadioButton Content="Home"
                    Height="40"
                    FontSize="14"
                    Margin="20,0,0,0"
                    Foreground="White"
                    Style="{StaticResource MenuButtonTheme}"
                    IsChecked="True"
                    Command="{Binding HomeViewCommand}"/>

                <RadioButton Content="Books"
                    Height="40"
                    FontSize="14"
                    Margin="20,0,0,0"
                    Foreground="White"
                    Style="{StaticResource MenuButtonTheme}"
                    Command="{Binding BooksViewCommand}"/>

                <RadioButton Content="Users"
                    Height="40"
                    FontSize="14"
                    Margin="20,0,0,0"
                    Foreground="White"
                    Style="{StaticResource MenuButtonTheme}"
                    Command="{Binding UsersViewCommand}"/>
                
                <RadioButton Content="Loans"
                    Height="40"
                    FontSize="14"
                    Margin="20,0,0,0"
                    Foreground="White"
                    Style="{StaticResource MenuButtonTheme}"
                    Command="{Binding LoansViewCommand}"/>
            </StackPanel>

            <Image Grid.Column="1" Visibility="Visible"
                   Height="150"
                   Source="/Images/books_menu3.png"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top" Margin="0,-70,0,0"/>

            <!--<TextBox Grid.Column="1" 
                       Width="350"
                       Height="40"
                       VerticalContentAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="5"
                       Style="{StaticResource ModernTextBox_Search}"/>-->

            <ContentControl Grid.Row="1"
                            Grid.Column="1"
                            Margin="10"
                            Content="{Binding CurrentView}">


            </ContentControl>

        </Grid>
    </Border>
</Window>