<Application x:Class="MyLMS.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MyLMS"
             xmlns:viewModel="clr-namespace:MyLMS.MVVM.ViewModels"
             xmlns:view="clr-namespace:MyLMS.MVVM.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/ButtonTheme.xaml"/>
                <ResourceDictionary Source="/Themes/MenuButtonTheme.xaml"/>
                <ResourceDictionary Source="/Themes/TextBoxTheme_Search.xaml"/>
                <ResourceDictionary Source="/Themes/TextBoxTheme.xaml"/>
                <ResourceDictionary Source="/Themes/DataGridTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="{x:Type Control}">
                <!-- Applica a tutti i controlli che ereditano da Control -->
                <Setter Property="FontFamily" Value="Fonts/#myFont"/>
                <!-- O il nome del tuo font, es: "Segoe UI" o "Comic Sans MS" -->
                <Setter Property="FontSize" Value="12"/>
            </Style>

            <DataTemplate DataType="{x:Type viewModel:HomeViewModel}">
                <view:HomeView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:BooksViewModel}">
                <view:BooksView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:UsersViewModel}">
                <view:UsersView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:LoansViewModel}">
                <view:LoansView/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
