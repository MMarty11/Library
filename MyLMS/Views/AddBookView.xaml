<UserControl x:Class="MyLMS.Views.AddBookView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyLMS.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Riga per pulsante Indietro -->
            <RowDefinition Height="*"/>     <!-- Contenuto form -->
            <RowDefinition Height="Auto"/>  <!-- Pulsanti in basso -->
        </Grid.RowDefinitions>

        <!-- Pulsante Indietro -->
        <Button Grid.Row="0"
                Content="← Indietro"
                HorizontalAlignment="Left"
                Padding="10,2"
                Margin="0,0,0,10"
                Click="BackButton_Click"/>

        <!-- Form di inserimento libro -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Titolo -->
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Text="Titolo:"
                       VerticalAlignment="Center"
                       Margin="0,0,5,5"/>
            <TextBox Grid.Row="0" Grid.Column="1"
                     Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,5"/>

            <!-- Autore -->
            <TextBlock Grid.Row="1" Grid.Column="0"
                       Text="Autore:"
                       VerticalAlignment="Center"
                       Margin="0,0,5,5"/>
            <TextBox Grid.Row="1" Grid.Column="1"
                     Text="{Binding Author, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,5"/>

            <!-- ISBN -->
            <TextBlock Grid.Row="2" Grid.Column="0"
                       Text="ISBN:"
                       VerticalAlignment="Center"
                       Margin="0,0,5,5"/>
            <TextBox Grid.Row="2" Grid.Column="1"
                     Text="{Binding Isbn, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,5"/>

            <!-- Anno -->
            <TextBlock Grid.Row="3" Grid.Column="0"
                       Text="Anno:"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"/>
            <TextBox Grid.Row="3" Grid.Column="1"
                     Text="{Binding Year, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,0"/>
        </Grid>

        <!-- Pulsanti in basso -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Pulisci"
                    Margin="0,0,10,0"
                    Padding="10,2"
                    Command="{Binding ClearCommand}"/>
            <Button Content="Salva"
                    Padding="10,2"
                    Command="{Binding SaveCommand}"/>
        </StackPanel>

    </Grid>
</UserControl>