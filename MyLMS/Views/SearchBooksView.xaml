<UserControl x:Class="MyLMS.Views.SearchBooksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyLMS.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Riga per pulsante Indietro -->
            <RowDefinition Height="Auto"/>
            <!-- Barra ricerca -->
            <RowDefinition Height="*"/>
            <!-- Elenco libri -->
            <RowDefinition Height="Auto"/>
            <!-- Dettagli / Modifica -->
        </Grid.RowDefinitions>

        <!-- Pulsante Indietro -->
        <Button Grid.Row="0"
          Content="← Indietro"
          HorizontalAlignment="Left"
          Padding="10,2"
          Margin="0,0,0,10"
          Click="BackButton_Click"/>

        <!-- Barra di ricerca -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Cerca:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Width="250"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Cerca"
                    Margin="10,0,0,0"
                    Padding="10,2"
                    Command="{Binding SearchCommand}" />
            <Button Content="Mostra tutti"
                    Margin="10,0,0,0"
                    Padding="10,2"
                    Command="{Binding LoadAllCommand}" />
        </StackPanel>

        <!-- Elenco libri -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Books}"
                  SelectedItem="{Binding SelectedBook}"
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  CanUserAddRows="False"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Titolo" Binding="{Binding Title}" Width="2*"/>
                <DataGridTextColumn Header="Autore" Binding="{Binding Author}" Width="2*"/>
                <DataGridTextColumn Header="ISBN" Binding="{Binding Isbn}" Width="*"/>
                <DataGridTextColumn Header="Anno" Binding="{Binding Year}" Width="Auto"/>
                <DataGridCheckBoxColumn Header="Disponibile"
                                        Binding="{Binding IsAvailable}"
                                        Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Dettagli / Modifica libro selezionato -->
        <GroupBox Grid.Row="3" Header="Dettagli libro selezionato">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Titolo -->
                <TextBlock Text="Titolo:" Grid.Row="0" Grid.Column="0"
                           VerticalAlignment="Center" Margin="0,0,5,5"/>
                <TextBox Grid.Row="0" Grid.Column="1"
                         Text="{Binding SelectedBook.Title, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,10,5"/>

                <!-- Autore -->
                <TextBlock Text="Autore:" Grid.Row="1" Grid.Column="0"
                           VerticalAlignment="Center" Margin="0,0,5,5"/>
                <TextBox Grid.Row="1" Grid.Column="1"
                         Text="{Binding SelectedBook.Author, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,10,5"/>

                <!-- ISBN -->
                <TextBlock Text="ISBN:" Grid.Row="0" Grid.Column="2"
                           VerticalAlignment="Center" Margin="10,0,5,5"/>
                <TextBox Grid.Row="0" Grid.Column="3"
                         Text="{Binding SelectedBook.Isbn, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,5"/>

                <!-- Anno -->
                <TextBlock Text="Anno:" Grid.Row="1" Grid.Column="2"
                           VerticalAlignment="Center" Margin="10,0,5,5"/>
                <TextBox Grid.Row="1" Grid.Column="3"
                         Text="{Binding SelectedBook.Year, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,5"/>

                <!-- Disponibile -->
                <CheckBox Grid.Row="2" Grid.Column="1"
                          Content="Disponibile"
                          IsChecked="{Binding SelectedBook.IsAvailable}"
                          Margin="0,5,0,5"/>

                <!-- Pulsanti azione -->
                <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,10,0,0">
                    <Button Content="Elimina"
                            Margin="0,0,10,0"
                            Padding="10,2"
                            Command="{Binding DeleteCommand}"/>
                    <Button Content="Salva modifiche"
                            Padding="10,2"
                            Command="{Binding SaveCommand}"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>