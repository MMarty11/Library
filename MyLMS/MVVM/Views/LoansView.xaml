<UserControl x:Class="MyLMS.MVVM.Views.LoansView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyLMS.MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="460" d:DesignWidth="800">

    <Border CornerRadius="10">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Ricerca-->
                <RowDefinition Height="*"/>  <!-- Prestiti attivi -->
                <RowDefinition Height="Auto"/>  <!-- Nuovo prestito -->
                <RowDefinition Height="Auto"/>  <!-- Messaggio -->
            </Grid.RowDefinitions>

            <!-- Barra di ricerca -->
             <StackPanel Grid.Row="0"
                 Orientation="Horizontal"
                 Margin="0,0,0,10">
                <TextBox Width="350" Style="{StaticResource ModernTextBox_Search}"
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                 <Button Content="Search"
                     Margin="10,0,0,0"
                     Style="{StaticResource ModernButton}"
                     Command="{Binding SearchCommand}"/>
                 <Button Content="Reset"
                     Margin="10,0,0,0"
                     Style="{StaticResource ModernButton}"
                     Command="{Binding LoadAllCommand}"/>
             </StackPanel>

            <!-- Sezione prestiti attivi -->
            <Grid Margin="10" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Elenco prestiti attivi -->
                <DataGrid Grid.Row="0"
                        ItemsSource="{Binding ActiveLoans}"
                        SelectedItem="{Binding SelectedActiveLoan}"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        IsReadOnly="True"
                        Margin="0,0,0,10"
                        Style="{StaticResource ModernDataGrid}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="User"
                                        Binding="{Binding User.FullName}"
                                        Width="2*"/>
                        <DataGridTextColumn Header="Book"
                                        Binding="{Binding Book.Title}"
                                        Width="2*"/>
                        <DataGridTextColumn Header="Loan Date"
                                        Binding="{Binding LoanDate, StringFormat=\{0:dd/MM/yyyy HH:mm\}}"
                                        Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Pulsanti -->
                <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                    <!-- <Button Content="Aggiorna"
                        Margin="0,0,10,0"
                        Padding="10,2"
                        Command="{Binding RefreshCommand}"/> -->
                    <Button Content="Return"
                        Style="{StaticResource ModernButton}"
                        Command="{Binding ReturnBookCommand}"/>
                </StackPanel>
            </Grid>

            <!-- Sezione nuovo prestito -->
            <GroupBox Grid.Row="2" Header="New loan" Foreground="White" FontFamily="Baskerville Old Face" BorderBrush="{x:Null}" BorderThickness="0.7">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Utente -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="User:"
                           FontFamily="Baskerville Old Face"
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"/>
                    <ComboBox Grid.Row="0" Grid.Column="1"
                          ItemsSource="{Binding Users}"
                          SelectedItem="{Binding SelectedUser}"
                          DisplayMemberPath="FullName"
                          Margin="0,0,10,0"
                          Width="200"/>

                    <!-- Libro -->
                    <TextBlock Grid.Row="0" Grid.Column="2"
                           Text="Book:"
                           FontFamily="Baskerville Old Face"
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"/>
                    <ComboBox Grid.Row="0" Grid.Column="3"
                          ItemsSource="{Binding AvailableBooks}"
                          SelectedItem="{Binding SelectedAvailableBook}"
                          DisplayMemberPath="Title"
                          Margin="0,0,10,0"
                          Width="200"/>

                    <!-- Pulsante prestito -->
                    <Button Grid.Row="0" Grid.Column="4"
                        Content="Confirm"
                        Style="{StaticResource ModernButton}"
                        Command="{Binding LoanBookCommand}"/>
                </Grid>
            </GroupBox>


            <!-- Messaggio -->
            <TextBlock x:Name="tbMessage" Grid.Row="3"
                   Text="{Binding Message}"
                   Foreground="{Binding MessageColor}"
                   Margin="0,5,0,0"/>

        </Grid>

    </Border>
</UserControl>