<UserControl x:Class="MyLMS.MVVM.Views.LoansView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyLMS.MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Riga per pulsante Indietro -->
            <RowDefinition Height="Auto"/>  <!-- Nuovo prestito -->
            <RowDefinition Height="Auto"/>  <!-- Ricerca-->
            <RowDefinition Height="*"/>  <!-- Prestiti attivi -->
        </Grid.RowDefinitions>

        <!-- Pulsante Indietro -->
        <Button Grid.Row="0"
                Content="← Indietro"
                HorizontalAlignment="Left"
                Padding="10,2"
                Margin="0,0,0,10"
                Click="BackButton_Click"/>

        <!-- Sezione nuovo prestito -->
        <GroupBox Grid.Row="1" Header="Nuovo prestito">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Utente -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Utente:"
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"/>
                <ComboBox Grid.Row="0" Grid.Column="1"
                          ItemsSource="{Binding Users}"
                          SelectedItem="{Binding SelectedUser}"
                          DisplayMemberPath="FullName"
                          Margin="0,0,10,0"
                          Width="200"/>

                <!-- Libro -->
                <TextBlock Grid.Row="0" Grid.Column="2"
                           Text="Libro:"
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"/>
                <ComboBox Grid.Row="0" Grid.Column="3"
                          ItemsSource="{Binding AvailableBooks}"
                          SelectedItem="{Binding SelectedAvailableBook}"
                          DisplayMemberPath="Title"
                          Margin="0,0,10,0"
                          Width="200"/>

                <!-- Pulsante prestito -->
                <Button Grid.Row="0" Grid.Column="4"
                        Content="Conferma prestito"
                        Padding="10,2"
                        Command="{Binding LoanBookCommand}"/>
            </Grid>
        </GroupBox>

        <!-- Barra di ricerca -->
        <StackPanel Grid.Row="2"
             Orientation="Horizontal"
             Margin="0,0,0,10">
            <TextBlock Text="Cerca prestito:"
                VerticalAlignment="Center"
                Margin="0,0,5,0"/>
            <TextBox Width="250"
              Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Cerca"
             Margin="10,0,0,0"
             Padding="10,2"
             Command="{Binding SearchCommand}"/>
            <Button Content="Mostra tutti"
             Margin="10,0,0,0"
             Padding="10,2"
             Command="{Binding LoadAllCommand}"/>
        </StackPanel>

        <!-- Sezione prestiti attivi -->
        <GroupBox Grid.Row="3" Header="Prestiti attivi" Margin="0,10,0,0">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Elenco prestiti attivi -->
                <DataGrid Grid.Row="0"
                          ItemsSource="{Binding ActiveLoans}"
                          SelectedItem="{Binding SelectedActiveLoan}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          Margin="0,0,0,10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Utente"
                                            Binding="{Binding User.FullName}"
                                            Width="2*"/>
                        <DataGridTextColumn Header="Libro"
                                            Binding="{Binding Book.Title}"
                                            Width="2*"/>
                        <DataGridTextColumn Header="Data prestito"
                                            Binding="{Binding LoanDate, StringFormat=\{0:dd/MM/yyyy HH:mm\}}"
                                            Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Pulsanti -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="Aggiorna"
                            Margin="0,0,10,0"
                            Padding="10,2"
                            Command="{Binding RefreshCommand}"/>
                    <Button Content="Restituisci selezionato"
                            Padding="10,2"
                            Command="{Binding ReturnBookCommand}"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>