<UserControl x:Class="MyLMS.MVVM.Views.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyLMS.MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="460" d:DesignWidth="800">

    <Border CornerRadius="10">

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Ricerca -->
                <RowDefinition Height="*"/>  <!-- Lista utenti -->
                <RowDefinition Height="Auto"/>  <!-- Dettagli / Azioni -->
                <RowDefinition Height="Auto"/>  <!-- Messaggio -->
            </Grid.RowDefinitions>

            <!-- Barra di ricerca -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                 <TextBox Width="350" Margin="5"
                     Style="{StaticResource ModernTextBox_Search}"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                <Button Content="Search"
                    Margin="10,0,0,0"
                    Padding="10,2"
                    Style="{StaticResource ModernButton}"
                    Command="{Binding SearchCommand}" />
                <Button Content="Reset"
                    Margin="10,0,0,0"
                    Padding="10,2"
                    Style="{StaticResource ModernButton}"
                    Command="{Binding LoadAllCommand}" />
            </StackPanel>

            <!-- Elenco utenti -->
            <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Users}"
                  SelectedItem="{Binding SelectedUser}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Margin="0,0,0,10"
                  Style="{StaticResource ModernDataGrid}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Full name"
                                    Binding="{Binding FullName}"
                                    Width="2*"/>
                    <DataGridTextColumn Header="Email"
                                    Binding="{Binding Email}"
                                    Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Dettagli utente selezionato / nuovo utente -->
            <GroupBox Grid.Row="2" Header="User details" Foreground="White" FontFamily="Baskerville Old Face" BorderBrush="{x:Null}" BorderThickness="0.7">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Nome completo -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Full name:"
                           FontFamily="Baskerville Old Face"
                           VerticalAlignment="Center"
                           Margin="0,0,5,5"/>
                    <TextBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Width="350"
                         Style="{StaticResource ModernTextBox}"
                         Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
                         Margin="10,0,0,5"/>

                    <!-- Email -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Email:"
                           FontFamily="Baskerville Old Face"
                           VerticalAlignment="Center"
                           Margin="0,0,5,5"/>
                    <TextBox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Width="350"
                         Style="{StaticResource ModernTextBox}"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         Margin="10,0,0,5"/>

                    <!-- Pulsanti azione -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,10,0,0">
                        <Button Content="New"
                            Margin="0,0,10,0"
                            Style="{StaticResource ModernButton}"
                            Command="{Binding NewCommand}"/>
                        <Button Content="Delete"
                            Margin="0,0,10,0"
                            Style="{StaticResource ModernButton}"
                            Command="{Binding DeleteCommand}"/>
                        <Button Content="Save"
                            Style="{StaticResource ModernButton}"
                            Command="{Binding SaveCommand}"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Messaggio -->
            <TextBlock x:Name="tbMessage" Grid.Row="3"
                   Text="{Binding Message}"
                   Foreground="{Binding MessageColor}"
                   Margin="0,5,0,0"/>
        </Grid>
    </Border>
</UserControl>