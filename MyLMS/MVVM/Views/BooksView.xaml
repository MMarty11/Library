<UserControl x:Class="MyLMS.MVVM.Views.BooksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyLMS.MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="460" d:DesignWidth="800">
    
    <Border CornerRadius="10">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Barra ricerca -->
                <RowDefinition Height="*"/>  <!-- Elenco libri -->
                <RowDefinition Height="Auto"/>  <!-- Dettagli / Modifica / Nuovo -->
                <RowDefinition Height="Auto"/>  <!-- Messaggio -->
            </Grid.RowDefinitions>

            <!-- Barra di ricerca -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox Width="350"
                     Margin="5"
                     Style="{StaticResource ModernTextBox_Search}"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                <Button Content="Search"
                    Margin="10,0,0,0"
                    Style="{StaticResource ModernButton}"
                    Command="{Binding SearchCommand}" />
                <Button Content="Reset"
                    Margin="10,0,0,0"
                    Style="{StaticResource ModernButton}"
                    Command="{Binding LoadAllCommand}" />
            </StackPanel>


            <!-- Elenco libri -->
            <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Books}"
                  SelectedItem="{Binding SelectedBook}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  Margin="0,0,0,10"
                  Style="{StaticResource ModernDataGrid}">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*"/>
                    <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="2*"/>
                    <DataGridTextColumn Header="ISBN" Binding="{Binding Isbn}" Width="*"/>
                    <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="*"/>
                    <DataGridCheckBoxColumn Header="Available"
                                        Binding="{Binding IsAvailable}"
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Dettagli / Modifica / Nuovo libro -->
            <GroupBox Grid.Row="2" Grid.ColumnSpan="3" Header="Book details:" Foreground="White" FontFamily="Baskerville Old Face" BorderBrush="{x:Null}" BorderThickness="0.7">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="43.677"/>
                        <ColumnDefinition Width="271*"/>
                        <ColumnDefinition Width="48*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="319*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Titolo -->
                    <TextBlock Text="Title:" Grid.Row="0" Grid.Column="0"
                           Foreground="White" FontFamily="Baskerville Old Face" VerticalAlignment="Top" Margin="0,5,5,0" />
                    <TextBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left"
                         Style="{StaticResource ModernTextBox}"
                         Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                         Margin="10,0,0,5"/>

                    <!-- Autore -->
                    <TextBlock Text="Author:" Grid.Row="1" Grid.Column="0"
                           Foreground="White" FontFamily="Baskerville Old Face" VerticalAlignment="Top" Margin="0,5,5,0"/>
                    <TextBox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left"
                         Style="{StaticResource ModernTextBox}"
                         Text="{Binding Author, UpdateSourceTrigger=PropertyChanged}"
                         Margin="10,0,0,5"/>

                    <!-- ISBN -->
                    <TextBlock Text="ISBN:" Grid.Row="0" Grid.Column="3"
                           Foreground="White" FontFamily="Baskerville Old Face" VerticalAlignment="Top" Margin="10,5,5,0"/>
                    <TextBox Grid.Row="0" Grid.Column="4" HorizontalAlignment="Left"
                         Style="{StaticResource ModernTextBox}"
                         Text="{Binding Isbn, UpdateSourceTrigger=PropertyChanged}"
                         Margin="10,0,0,5"/>

                    <!-- Anno -->
                    <TextBlock Text="Year:" Grid.Row="1" Grid.Column="3"
                           Foreground="White" VerticalAlignment="Top" Margin="10,5,5,0"/>
                    <TextBox Grid.Row="1" Grid.Column="4" HorizontalAlignment="Left"
                         Style="{StaticResource ModernTextBox}"
                         Text="{Binding Year, UpdateSourceTrigger=PropertyChanged}"
                         Margin="10,0,0,5"/>

                    <!-- Pulsanti azione -->
                    <StackPanel Grid.Row="2" Grid.Column="4"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,10,0,0">
                        <Button Content="New"
                            Margin="0,0,10,0"
                            Style="{StaticResource ModernButton}"
                            Command="{Binding NewBookCommand}"/>
                        <Button Content="Delete"
                            Margin="0,0,10,0"
                            Style="{StaticResource ModernButton}"
                            Command="{Binding DeleteCommand}"/>
                        <Button Content="Save"
                            Style="{StaticResource ModernButton}"
                            Command="{Binding SaveCommand}"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Messaggio -->
            <TextBlock x:Name="tbMessage" Grid.Row="3"
                   Text="{Binding Message}"
                   Foreground="{Binding MessageColor}"
                   Margin="0,5,0,0" Grid.ColumnSpan="3"/>
        </Grid>
    </Border>
</UserControl>